  "grammar": [
    {
      "pattern": "Plain Form (Dictionary Form)",
      "explanation": "The casual form of verbs used in informal situations. For ru-verbs: drop -masu, add -ru. For u-verbs: change the final syllable to u.",
      "examples": [
        {"jp": "たべます → たべる", "en": "ru-verb: eat"},
        {"jp": "のみます → のむ", "en": "u-verb: drink"},
        {"jp": "します → する", "en": "irregular: do"},
        {"jp": "きます → くる", "en": "irregular: come"}
      ]
    },
    {
      "pattern": "Particle に (ni)",
      "explanation": "Used for: specific time (at 2 o'clock), location (in/at school), target/destination (to a friend)",
      "examples": [
        {"jp": "にじにはいきます", "en": "Go at 2 o'clock"},
        {"jp": "がっこうにいきます", "en": "Go to school"},
        {"jp": "ともだちにあげます", "en": "Give to a friend"}
      ]
    },
    {
      "pattern": "Particle へ (e)",
      "explanation": "Only for direction (towards where). Note: Written as へ (he) but pronounced 'e'!",
      "examples": [
        {"jp": "うちへかえります", "en": "Return home"},
        {"jp": "にほんへいきます", "en": "Go to Japan"}
      ]
    },
    {
      "pattern": "Particle で (de)",
      "explanation": "Location of action - where an activity takes place",
      "examples": [
        {"jp": "きっさてんでこーひーをのみます", "en": "Drink coffee at a cafe"},
        {"jp": "がっこうでべんきょうします", "en": "Study at school"},
        {"jp": "うちでてれびをみます", "en": "Watch TV at home"}
      ]
    },
    {
      "pattern": "Particle と (to)",
      "explanation": "Together with someone, or listing items",
      "examples": [
        {"jp": "ともだちとえいがにいきます", "en": "Go to cinema with a friend"},
        {"jp": "かぞくとたべます", "en": "Eat with family"},
        {"jp": "すしとてんぷら", "en": "Sushi and tempura"}
      ]
    }
  ],
