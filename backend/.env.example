# Backend Environment Variables
# Copy to .env.local and fill in your real values
# NEVER COMMIT .env.local!

PORT=3001
NODE_ENV=development

# API Keys (get from respective services)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database (local PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/speech_practice

# PostgreSQL Connection Details
PGHOST=localhost
PGPORT=5432
PGDATABASE=speech_practice
PGUSER=
PGPASSWORD=

# Security
ACCESS_PASSWORD=choose_a_strong_password

# Audio Storage
AUDIO_STORAGE_PATH=./audio_recordings

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
